<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.onlineshopapplication.view.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_navigation_home_to_detailFragment"
            app:destination="@id/detailFragment" />

    </fragment>

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.onlineshopapplication.view.fragment.CategoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_category">

        <action
            android:id="@+id/action_navigation_category_to_productOfEachCategoryFragment"
            app:destination="@id/productOfEachCategoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.onlineshopapplication.view.fragment.CartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_cart">

        <action
            android:id="@+id/action_navigation_cart_to_detailFragment"
            app:destination="@id/detailFragment" />

        <action
            android:id="@+id/action_navigation_cart_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_navigation_cart_to_addressFragment"
            app:destination="@id/addressFragment" />

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.onlineshopapplication.view.fragment.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/productOfEachCategoryFragment"
        android:name="com.example.onlineshopapplication.view.fragment.ProductOfEachCategoryFragment"
        android:label="fragment_product_of_each_category"
        tools:layout="@layout/fragment_product_of_each_category">

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />

        <action
            android:id="@+id/action_productOfEachCategoryFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.onlineshopapplication.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />

        <action
            android:id="@+id/action_loginFragment_to_addressFragment"
            app:destination="@id/addressFragment" />

    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.onlineshopapplication.view.fragment.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" />

    <fragment
        android:id="@+id/addressFragment"
        android:name="com.example.onlineshopapplication.view.fragment.AddressFragment"
        android:label="fragment_address"
        tools:layout="@layout/fragment_address">

        <argument
            android:name="email"
            android:defaultValue="null"
            app:argType="string" />

    </fragment>

</navigation>