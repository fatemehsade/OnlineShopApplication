<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bestProduct"
            type="String" />

        <variable
            name="recentProduct"
            type="String" />

        <variable
            name="viewProduct"
            type="String" />

        <variable
            name="specialProductTitle"
            type="String" />

    </data>

    <ScrollView
        android:id="@+id/scroll_view_hom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#7C6138"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/search_menu" />


            <TextView
                android:id="@+id/text_new"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="@{recentProduct}"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                 />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_new"
                />

            <TextView
                android:id="@+id/text_better"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="@{bestProduct}"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_recent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_better"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_better"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_better"/>

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/recycler_view_better"
                android:padding="8dp"
                android:text="@{viewProduct}"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_better"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view"/>


            <TextView
                android:id="@+id/txt_special_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="@{specialProductTitle}"
                android:textColor="#420909"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_better" />

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider_view_special_product"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_special_product_title"
                app:sliderAnimationDuration="1000"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="1000"
                app:sliderIndicatorGravity="bottom|left"
                app:sliderIndicatorMargin="8dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/white"
                app:sliderIndicatorUnselectedColor="#434040"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true">

                <ImageView
                    android:id="@+id/img_special_product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp" />

            </com.smarteist.autoimageslider.SliderView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>